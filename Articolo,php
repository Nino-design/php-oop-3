<?php 

class Articolo{
    public $nome;
    public $produttore;
    public $prezzo;


    function __construct($_nome, $_produttore, $_prezzo)
    {
        $this->nome = $_nome;
        $this->produttore = $_produttore;
        $this->prezzo = $_prezzo;

    }

    function mostraDettagliArticolo(){
        return "Articolo:  $this->nome , Produttore:  $this->produttore , Prezzo: $this->prezzo euro";
    }
}









?>